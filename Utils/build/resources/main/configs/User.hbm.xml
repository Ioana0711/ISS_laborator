<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="bugs.User"
           table="user">
        <id name="id" column="id_user" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property
                name="email"
                column="email"
                type="java.lang.String"/>

        <property
                name="parola"
                column="parola"
                type="java.lang.String"/>

        <property
                name="tip"
                column="tip"
                type="java.lang.String"/>

    </class>
</hibernate-mapping>